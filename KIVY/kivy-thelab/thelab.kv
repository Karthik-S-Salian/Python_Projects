<AnchorLayoutExample@AnchorLayout>:
    anchor_x: "center"                              #right,left,center
    anchor_y: "top"                               #center,top,bottom
    BoxLayout:
        size_hint: 0.1,0.1
        Button:
            text: "A"
        Button:
            text: "b"


<BoxLayoutExample@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "A"
        size_hint: 1,0.5           # in terms of %    # changes size by _% from original for given layout
    Button:
        text: "B"
        size_hint: None,None     # size fix the size does not allow to change as display size changes
        size : "50dp","60dp"     # to use size in layout set size_hint to None
    Button:
        text: "C"
        size_hint: None,None
        width:"100dp"         # can use width and height instead of size
        height: "100dp"          #default size value = "100dp","100dp"
    Button:
        text: "E"
        size_hint: 1,None       # here width will be 100% , changes as display changes but ratio remains constant
        height : "60dp"        # but height remains constant i.e 60dp
    Button:
        text: "S"
        size_hint: .2,.6
        pos_hint: {"x": .5 }       # for x "x" -> from left  "center_x" -> from center  "right"  ->from right
                                   # for y "y" -> from bottom  "center_y" -> from center  "top"  ->from top


