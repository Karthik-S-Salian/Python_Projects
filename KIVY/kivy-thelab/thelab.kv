<CanvasExample3@Widget>:
    canvas:
        Color:
            rgba: 1,0,0,1
        Line:
            circle:(dp(200),dp(200),dp(100)) #center_x,  center_y ,radius
            width: 2
        Line:
            ellipse:(dp(400),dp(300),dp(100),dp(200)) #center_x,  center_y ,radius_x , radius_y
            width: 2
        Color:
            rgba: 0,1,1,1
        Line:
            rectangle:(dp(300),dp(300),dp(50),dp(100)) #pos_x,pos_y, size_x,  size_y
            width: 2
        Line:
            points: (0,self.center_y,self.width,self.center_y)
            width: 2
        Line:
            points: (self.center_x,0,self.center_x,self.height)
            width: 2

            
#: set siz dp(150)                                       # defining variable

<CanvasExample1@Widget>:
    canvas:
        Rectangle:
            pos: self.center_x - siz/2,self.center_y - siz/2
            size: siz,siz
        Ellipse:
            pos: dp(150),dp(150)
            size: siz,siz/2
        Line:
            points: (0,0,50,50)
        Line:
            points: (0,0,self.width/4,100,self.width/2,0,self.width*.75,100,self.width,0)
            width: 2

