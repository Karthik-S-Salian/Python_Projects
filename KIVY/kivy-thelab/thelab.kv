<WidgetsLayoutExample>:
    cols: 4
    ToggleButton:
        text: "OFF"
        on_state: root.on_toogle_button_state(self)
        #size_hint: None,1
        #width: "400dp"
    Button:
        text: "Click here"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: (1,.5,1,1)

    BoxLayout:
        orientation: "vertical"
        Switch:
            id: my_switch
            #on_active: root.on_switch_active(self)
            size_hint: 1,1
            active: True
        Slider:
            id: my_slider
            min: 0
            max: 100
            value: 55
            on_value: root.on_slider_value(self)
            orientation: "horizontal"
            disabled: not my_switch.active
        Label:
            text: str(int(my_slider.value))
    ProgressBar:
        max: 100
        value: int(my_slider.value)
    TextInput:
        id: my_text_input
        text: "  hghg"
        multiline: False
        on_text_validate: root.on_text_input_validate(self)
    Label:
        text: root.text_input_str



